<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:background="@color/teal_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/ic_banner_foreground"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:contentDescription="Nueva Trivia"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva Trivia"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true" />

        </LinearLayout>

        <EditText
            android:id="@+id/txt_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Introduce Titulo de la Trivia"
            android:padding="12dp"
            />

        <EditText
            android:id="@+id/txt_view_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Introduce la descripcion de la Trivia"
            android:padding="12dp"
            />

        <EditText
            android:id="@+id/txt_view_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Introduce la url de la imagen de la Trivia"
            android:padding="12dp"
            />

        <EditText
            android:id="@+id/txt_view_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Introduce Creador de la Trivia"
            android:padding="12dp"
            />

        <EditText
            android:id="@+id/txt_view_numPreguntas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Introduce el nÃºmero de preguntas de la Trivia"
            android:padding="12dp"
            />

    </LinearLayout>

</ScrollView>
