<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal de la app -->
    <style name="Theme.ProyectoQuiiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Desactivar la ActionBar predeterminada -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Colores personalizados -->
        <item name="colorPrimary">@color/drawer_background</item>
        <item name="colorPrimaryVariant">@color/drawer_background</item>
        <item name="colorOnPrimary">@color/drawer_text</item>
        <item name="colorSecondary">@color/drawer_text_secondary</item>
        <item name="colorSecondaryVariant">@color/drawer_text</item>
        <item name="colorOnSecondary">@color/drawer_text_secondary</item>
        <item name="android:windowBackground">@color/drawer_background</item>
        <item name="android:statusBarColor">@color/drawer_background</item>
        <item name="android:navigationBarColor">@color/drawer_background</item>
    </style>

    <!-- Estilo personalizado para la Toolbar -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/drawer_background</item>
        <item name="android:titleTextColor">@color/drawer_text</item>
        <item name="android:subtitleTextColor">@color/drawer_text_secondary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <!-- TÃ­tulos en la Toolbar -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Estilo del texto de los items en el Drawer -->
    <style name="DrawerMenuTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Estilo para el fondo del Navigation Drawer -->
    <style name="NavigationDrawerStyle">
        <item name="android:background">@color/drawer_background</item>
    </style>

    <!-- Estilo del texto de los encabezados en el Drawer -->
    <style name="DrawerHeaderTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Estilo del texto secundario de los encabezados -->
    <style name="DrawerHeaderSubTextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/drawer_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

</resources>
