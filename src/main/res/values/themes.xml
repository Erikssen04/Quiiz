<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Proyecto_Quizz_EricMacia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>

    <!-- Custom toolbar style -->
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">#66B2FF</item> <!-- Fondo azul claro -->
        <item name="android:titleTextColor">#FFCC00</item> <!-- Color del texto del título -->
        <item name="android:subtitleTextColor">#FFFFFF</item> <!-- Color del texto del subtítulo -->
        <item name="android:paddingStart">16dp</item> <!-- Padding de la izquierda -->
        <item name="titleTextAppearance">@style/CustomToolbarTitle</item> <!-- Estilo del título -->
    </style>

    <!-- Custom title text style -->
    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFCC00</item> <!-- Color del título -->
    </style>

    <!-- Custom background color for the Drawer Header -->
    <style name="DrawerHeaderStyle">
        <item name="android:background">@color/teal_light</item> <!-- Fondo del header -->
    </style>

</resources>
